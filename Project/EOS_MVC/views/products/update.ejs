<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <!-- Header-->
    <%- include("../partials/header.ejs") %>

    <main class="main-newProduct">
      <div class="container-newProduct">
        <h2 class="titulo-newProduct">EDITAR PRODUCTO</h2>
        <% if (locals.errors) { errors.forEach(error => { %>
        <p><%= error.msg %></p>
        <% }) }%>
        <form
          action="/admin/products/edit/?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="contenedor-campos-newProduct">
            <label for="imagenProducto">• Imagen/es</label>
            <input
              type="file"
              id="imagenProducto"
              name="imagenProducto"
              accept=".png, .jpg, .jpeg"
              multiple
            />
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="marcaProducto">• Marca</label>
            <select name="marcaProducto" id="marcaProducto">
              <option disabled selected>Seleccionar</option>
              <option value="Nike">Nike</option>
              <option value="Adidas">Adidas</option>
              <option value="Puma">Puma</option>
              <option value="New Balance">New Balance</option>
              <option value="Vans">Vans</option>
              <option value="Under Armour">Under Armour</option>
            </select>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="modeloProducto">• Modelo</label>
            <input
              type="text"
              name="modeloProducto"
              id="modeloProducto"
              value="<%= productToEdit.modelo %>"
            />
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="precioProducto">• Precio</label>
            <input
              type="number"
              name="precioProducto"
              min="0"
              id="precioProducto"
              value="<%= productToEdit.precio %>"
              placeholder="$$$$"
            />
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="categoriaProducto">• Categoria</label>
            <select name="categoriaProducto" id="categoriaProducto">
              <option disabled selected>Seleccionar</option>
              <option value="indumentaria">Indumentaria</option>
              <option value="calzado">Calzado</option>
              <option value="accesorios">Accesorios</option>
            </select>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="generoProducto">• Género</label>
            <select name="generoProducto" id="generoProducto">
              <option disabled selected>Seleccionar</option>
              <option value="masculino">Masculino</option>
              <option value="femenino">Femenino</option>
              <option value="unisex">Unisex</option>
            </select>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="shortDescripcion">• Descripción Breve</label>
            <textarea
              name="shortDescripcion"
              id="shortDescripcion"
              cols="1"
              rows="2"
              maxlength="60"
              placeholder="Descripción breve del producto"
            >
<%= productToEdit.shortDescripcion %>
            </textarea>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="longDescripcion">• Descripción Completa</label>
            <textarea
              name="longDescripcion"
              id="longDescripcion"
              cols="10"
              rows="10"
              placeholder="Descripción del producto"
            >
<%= productToEdit.longDescripcion %></textarea
            >
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="tallesProducto">• Talles</label>
            <select name="tallesProducto" id="tallesProducto">
              <option disabled selected>Seleccionar</option>
              <option value="S">S</option>
              <option value="M">M</option>
              <option value="L">L</option>
              <option value="Unico">Unico</option>
            </select>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="coloresProducto">• Colores</label>
            <input
              type="text"
              name="coloresProducto"
              id="coloresProducto"
              value="<%= productToEdit.colores %>"
            />
          </div>

          <div class="contenedor-campos-newProduct">
            <button type="submit" class="boton-newProduct">CONTINUAR</button>
          </div>
          <!--    METODO DELETE   -->
        </form>
      </div>
    </main>

    <!-- Footer-->
    <%- include("../partials/footer.ejs")%>
  </body>
</html>
