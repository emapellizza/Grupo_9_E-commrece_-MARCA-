<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <!-- Header-->
    <%- include("../partials/header.ejs") %>

    <main class="main-newProduct">
      <div class="container-newProduct">
        
        <h2 class="titulo-newProduct">CREAR PRODUCTO</h2>
        
        <form 
          action="/products/new" 
          method="POST" 
          enctype="multipart/form-data"
          id="formNewProduct"
        >
          
          <div class="contenedor-campos-newProduct">
            <label for="productImage">• Imagen/es</label>
            <input
              type="file"
              id="productImage"
              name="productImage"
              accept=".png, .jpg, .jpeg"
              multiple
            />
          </div>
   
          <div class="contenedor-campos-newProduct">
            <label for="brand">• Marca</label>
            <select name="brand" id="brand" >
              <option disabled selected>Seleccionar</option>
              <option value="Nike">Nike</option>
              <option value="Adidas">Adidas</option>
              <option value="Puma">Puma</option>
              <option value="New Balance">New Balance</option>
              <option value="Vans">Vans</option>
              <option value="Under Armour">Under Armour</option>
            </select>

            <% if (locals.errors && errors.brand) { %>
              <div class="text-danger"><%= errors.brand.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="model">• Modelo</label>
            <input type="text" name="model" id="model"
            value="<%= locals.old && old.model ? old.model : ''%>" placeholder="Modelo"/>

            <% if (locals.errors && errors.model) { %>
              <div class="text-danger"><%= errors.model.msg %></div>
            <% } %>
          </div>

  
          <div class="contenedor-campos-newProduct">
            <label for="price">• Precio</label>
            <input type="number" name="price" min="0" id="price" 
            value="<%= locals.old && old.price ? old.price : ''%>" placeholder="$$$$"/>
            
            <% if (locals.errors && errors.price) { %>
              <div class="text-danger"><%= errors.price.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="category">• Categoria</label>
            <select name="category" id="category">
                <option disabled selected>Seleccionar</option>
                <option value="indumentaria">Indumentaria</option>
                <option value="calzado">Calzado</option>
                <option value="accesorios">Accesorios</option>
            </select>
            <% if (locals.errors && errors.category) { %>
              <div class="text-danger"><%= errors.category.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="genre">• Género</label>
            <select name="genre" id="genre">
              <option disabled selected>Seleccionar</option>
              <option value="masculino">Masculino</option>
              <option value="femenino">Femenino</option>
              <option value="unisex">Unisex</option>
            </select>

            <% if (locals.errors && errors.genre) { %>
              <div class="text-danger"><%= errors.genre.msg %></div>
            <% } %>
          </div>

          <div class="contenedor-campos-newProduct">
            <label for="shortDescription">• Descripción Breve</label>
            <textarea name="shortDescription" id="shortDescription" cols="1" rows="1" maxlength="60" placeholder="Descripción breve del producto" ></textarea>

            <% if (locals.errors && errors.shortDescription) { %>
              <div class="text-danger"><%= errors.shortDescription.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="longDescription">• Descripción Completa</label>
            <textarea name="longDescription" id="longDescription" cols="10" rows="10" placeholder="Descripción del producto" ></textarea>

            <% if (locals.errors && errors.longDescription) { %>
              <div class="text-danger"><%= errors.longDescription.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="size">• Talle</label>
            <select name="size" id="size">
                <option disabled selected>Seleccionar</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="Unico">Unico</option>
            </select>

            <% if (locals.errors && errors.size) { %>
              <div class="text-danger"><%= errors.size.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <label for="color">• Color</label>
            <input type="text" name="color" id="color" placeholder="Color"/>

            <% if (locals.errors && errors.color) { %>
              <div class="text-danger"><%= errors.color.msg %></div>
            <% } %>
          </div>
  
          <div class="contenedor-campos-newProduct">
            <button type="submit" class="boton-newProduct">CONTINUAR</button>
  
        </form>
      </div>
    </main>

    <!-- Footer-->
    <%- include("../partials/footer.ejs")%>
  </body>
</html>
