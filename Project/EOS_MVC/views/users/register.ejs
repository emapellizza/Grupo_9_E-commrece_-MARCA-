<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>

    <main class="main-reg-log">
      <div class="container-all-reg-log">
        <h2>CREÁ TU CUENTA</h2>

        <form
          action="/users/register"
          method="POST">
          

          <div class="contenedor-campos-reg-log">
            <label for="firstName" class="label-reg-log">Nombre</label>
            <input
              type="text"
              name="firstName"
              id="firstName"
              
            />

           
           
          </div>

          <div class="contenedor-campos-reg-log">
            <label for="lastName" class="label-reg-log">Apellido</label>
            <input
              type="text"
              name="lastName"
              id="lastName"
              
            />
          </div>
          

          <div class="contenedor-campos-reg-log">
            <label for="dateOfBirth" class="label-reg-log"
              >Fecha de Nacimiento</label
            >
            <input
              type="date"
              name="dateOfBirth"
              id="dateOfBirth"
             
              required
            />
          </div>
          

          <div class="contenedor-campos-reg-log">
            <label for="email" class="label-reg-log">Correo Electrónico</label>
            <input
              type="email"
              name="email"
              id="email"
             
            />
          </div>
          

          <div class="contenedor-campos-reg-log">
            <label for="phone" class="label-reg-log">Telefono</label>
            <input
              type="text"
              name="phone"
              id="phone"
            
            />
          </div>
          
          <div class="contenedor-campos-reg-log">
            <label for="password" class="label-reg-log">Contraseña</label>
            <input type="password" name="password" id="password" />
          </div>
         

          <div class="contenedor-campos-reg-log">
            <label for="confirmPassword" class="label-reg-log"
              >Repetir Contraseña</label
            >
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
            />
          </div>
          

          <div class="checkbox-reg-log">
            <input type="checkbox" name="newsletter" id="newsletter" />
            <label for="newsletter" class="text-checkbox-reg-log"
              >Suscribirse al newsletter</label
            >
          </div>

          <div class="checkbox-reg-log">
            <input
              type="checkbox"
              name="terminos-condiciones"
              id="terminos-condiciones"
              required
            />
            <label for="terminos-condiciones" class="text-checkbox-reg-log"
              >Acepto los <a href="#">Términos y Condiciones</a></label
            >
          </div>

          <div class="boton-reg-log">
            <button type="submit">CREAR CUENTA</button>
          </div>
        </form>
      </div>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
