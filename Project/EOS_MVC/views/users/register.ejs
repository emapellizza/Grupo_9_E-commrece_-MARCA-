<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>

    <main class="main-reg-log">
      <h2>CREÁ TU CUENTA</h2>
      <form action="/guardar-usuario" method="POST">
        <div class="contenedor-campos-reg-log">
          <label for="nombre-usuario">Nombre</label>
          <input type="text" name="nombre-usuario" id="nombre-usuario" />
        </div>

        <div class="contenedor-campos-reg-log">
          <label for="apellido-usuario">Apellido</label>
          <input type="text" name="apellido-usuario" id="apellido-usuario" />
        </div>

        <div class="contenedor-campos-reg-log">
          <label for="fecha-nacimiento">Fecha de Nacimiento</label>
          <input type="date" name="fecha-nacimiento" id="fecha-nacimiento" />
        </div>

        <div class="contenedor-campos-reg-log">
          <label for="email">Correo Electrónico</label>
          <input type="email" name="email" id="email" />
        </div>

        <div class="contenedor-campos-reg-log">
          <label for="contraseña">Contraseña</label>
          <input type="password" name="contraseña" id="contraseña" />
        </div>

        <div class="contenedor-campos-reg-log">
          <label for="contraseña2">Repetir Contraseña</label>
          <input type="password" name="contraseña2" id="contraseña2" />
        </div>

        <div class="checkbox-reg-log">
          <input type="checkbox" name="newsletter" id="newsletter" />
          <label class="text-checkbox-reg-log">Suscribirse al newsletter</label>
        </div>

        <div class="checkbox-reg-log">
          <input
            type="checkbox"
            name="terminos-condiciones"
            id="terminos-condiciones"
            required
          />
          <label class="text-checkbox-reg-log"
            >Acepto los <a href="#">Términos y Condiciones</a></label
          >
        </div>

        <div class="boton-reg-log">
          <button type="submit">CREAR CUENTA</button>
        </div>
      </form>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
