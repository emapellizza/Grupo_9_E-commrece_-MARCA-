<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>

    <main class="main-userList">
      <h3>- LISTADO DE USUARIOS -</h3>
      <% for( let i = 0; i < users.length; i++ ) { %>

      <a
        class="userList-user-container"
        href="/users/detail/<%= users[i].id_user %>"
      >
        <div>
          <img
            class="userList-img profile-pic"
            src="/images/users/<%= users[i].image %>"
            alt=""
          />
        </div>
        <div class="userList-nombre">
          <p><%= users[i].first_name %> <%= users[i].last_name %></p>
        </div>
        <!--<div class="userList-eliminar">ELIMINAR</div>------>>
        <div>
          <form  method="POST" action="/admin/users/edit/<%= users[i].id_user %>?_method=PUT">
            <button class= "userList-eliminar" type ="submit">Editar</button>
          </form>

          <form  method="POST" action="/admin/users/delete/<%= users[i].id_user %>?_method=DELETE">
            <button class= "userList-eliminar" type ="submit">Eliminar</button>
          </form>

                <a href="/admin/users/delete/<%= users[i].id %>">
                  <button class= "userList-eliminar" type ="submit">Eliminar</button>
                </a>
          </div>
       
      </a>
    
      <% } %>
    </main>

    <!-- FOOTER -->
    <%- include("../partials/footer.ejs") %>
  </body>
</html>
