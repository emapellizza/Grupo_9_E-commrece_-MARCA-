<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>

    <main>
      <h1>ADMIN</h1>
      <div>
        <div>PRODUCTOS</div>
        <a href="./products" class="admin-items">Lista de Productos</a>
        <br />
        <a href="/admin/products/new" class="admin-items">Nuevo</a>
      </div>
      <div>
        <form
          action="/admin/products/edit"
          method="POST"
          class="busqueda-header"
        >
          <input type="text" placeholder="Product ID" name="searchproduct" />
          <button type="submit">
            <i class="fas fa-search logoLupa"></i>
          </button>
        </form>
      </div>
      <div>USUARIOS</div>
      <div>
        <form action="/admin/edituser/" method="GET" class="busqueda-header">
          <input type="text" placeholder="User ID" name="searchuser" />
          <button type="submit">
            <i class="fas fa-search logoLupa"></i>
          </button>
        </form>
      </div>

      <div>
        <a href="/admin/users" class="admin-items">Lista de Usuarios</a>
      </div>

      <div>
        <a href="/admin/messages" class="admin-items">Mensajes</a>
      </div>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
